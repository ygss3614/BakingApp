<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_detail_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8DFE9"
    android:orientation="horizontal">

    <!-- The static MasterListFragment -->
    <FrameLayout
        android:id="@+id/master_list_container"
        android:layout_width="400dp"
        android:layout_height="match_parent" />

    <!-- A small divider -->
    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />


    <!-- FrameLayout to holding recipe ingredients -->
    <FrameLayout
        android:id="@+id/recipe_ingredients_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8DFE9"
        android:minHeight="200dp"
        android:scaleType="centerInside" />

    <!-- FrameLayout to holding recipe steps -->
    <FrameLayout
        android:id="@+id/recipe_steps_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8DFE9"
        android:minHeight="200dp"
        android:scaleType="centerInside" />
</LinearLayout>


