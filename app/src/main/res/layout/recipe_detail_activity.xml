<?xml version="1.0" encoding="utf-8"?><!-- LinearLayout for holding recipes steps -->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baking_app_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <!-- MaterialCard for holding recipes ingredients -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recipe_ingredients_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_margin_left"
        android:layout_marginLeft="@dimen/card_margin_left"
        android:layout_marginTop="@dimen/card_margin_top"
        android:layout_marginEnd="@dimen/card_margin_rigth"
        android:layout_marginRight="@dimen/card_margin_rigth"
        android:background="#ffffff"
        android:minHeight="@dimen/card_min_heigth"
        app:cardBackgroundColor="#ffffff"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <TextView
            android:id="@+id/ingredients_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/recipe_ingredients_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredients_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            tools:text="@string/recipe_ingredients_list" />

    </com.google.android.material.card.MaterialCardView>


    <FrameLayout
        android:id="@+id/recipe_steps_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:minHeight="200dp"
        android:scaleType="centerInside" />

</LinearLayout>


