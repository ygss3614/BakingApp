<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recipes_background"
        android:orientation="vertical">
        <!-- FrameLayout to holding recipe ingredients -->
        <FrameLayout
            android:id="@+id/recipe_ingredients_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C8DFE9"
            android:minHeight="200dp"
            android:scaleType="centerInside" />


        <!-- FrameLayout to holding recipe steps -->
        <FrameLayout
            android:id="@+id/recipe_steps_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C8DFE9"
            android:minHeight="200dp"
            android:scaleType="centerInside" />
    </LinearLayout>



</ScrollView>
